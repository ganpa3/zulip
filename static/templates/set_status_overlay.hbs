<div class="micromodal" id="set-user-status-modal" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
        <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="set-user-status-title">
            <header class="modal__header">
                <h1 class="modal__title" id="set-user-status-title">{{t "Set status" }}</h1>
                <button class="modal__close" aria-label="{{t 'Close modal' }}" data-micromodal-close></button>
            </header>
            <main class="modal__content">
                <label for="user_status">{{t "Status message" }}</label>
                <input type="text" class="user_status" maxlength="60" />
                <button type="button" class="btn clear_search_button" id="clear_status_message_button" disabled="disabled">
                    <i class="fa fa-remove" aria-hidden="true"></i>
                </button>
                <div class="new-style user-status-options">
                    <button type="button" class="button no-style user-status-value">{{t "In a meeting" }}</button>
                    <button type="button" class="button no-style user-status-value">{{t "Commuting" }}</button>
                    <button type="button" class="button no-style user-status-value">{{t "Out sick" }}</button>
                    <button type="button" class="button no-style user-status-value">{{t "Vacationing" }}</button>
                    <button type="button" class="button no-style user-status-value">{{t "Working remotely" }}</button>
                </div>
            </main>
            <footer class="modal__footer">
                <button class="button rounded modal__btn" aria-label="{{t 'Close this dialog window' }}" data-micromodal-close>{{t "Cancel" }}</button>
                <button class="button rounded modal__btn modal__btn-primary" id="confirm-dialog-yes-button">{{t "Save" }}</button>
            </footer>
        </div>
    </div>
</div>

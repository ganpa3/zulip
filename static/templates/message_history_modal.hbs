<div class="micromodal" id="message-edit-history" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
        <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="message-history-label">
            <header class="modal__header">
                <h1 class="modal__title" id="message-history-label">{{t "Message edit history" }}</h1>
                <button class="modal__close" aria-label="{{t 'Close modal' }}" data-micromodal-close></button>
            </header>
            <main class="modal__content" id="confirm-dialog-modal-content">
                <div id="message-history-error"></div>
                <div class="controls" id="message-history"></div>
            </main>
            <footer class="modal__footer">
                <button class="button rounded modal__btn modal__btn-primary" aria-label="{{t 'Close this dialog window' }}" data-micromodal-close>{{t "Close" }}</button>
            </footer>
        </div>
    </div>
</div>
